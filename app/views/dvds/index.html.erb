<p id="notice"><%= notice %></p>

<h1>Viewing all DVDs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Rated</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dvds.each do |dvd| %>
      <tr>
        <td><%= link_to dvd.title, dvd %></td>
        <td><%= dvd.genre %></td>
        <td><%= dvd.year %></td>
        <td><%= dvd.rated %></td>
        <td><%= dvd.published %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Request a new DVD', new_dvd_path %>
