<h4 id="notice"><%= notice %></h4>
<div class="page-title">
  <h1><%= @user.name %></h1>
</div><br/>
<div class="container"
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <p class="show-table">
        <strong>Name:</strong>
        <%= @user.name %><br />

        <strong>Email:</strong>
        <%= @user.email %><br />

        <strong>Address:</strong>
        <%= @user.address %><br />

        <strong>Role:</strong>
        <%= @user.role %><br />
      </p>
    <div class="actions">
      <a class="btn btn-default"<%= link_to 'Edit profile', edit_user_path(@user) %> </a>
      <a class="btn btn-default" <%= link_to 'Back', users_path %></a>
    </div>

      <div>
        <table class="dvd-index">
        <% @user.dvds.each do |dvd| %>
          <tr>
            <td class="col-md-2 show-table"><%= link_to dvd.title, dvd %></td>
            <td class="col-md-2 show-table"><a class="btn btn-default btn-right" <%= link_to "Remove from My Collection", dvd, method: :delete, data: { confirm: 'Are you sure?' } %></a><td/>
          </tr>
        <% end %>
        </table>


      </div>
    </div>
  </div>
</div>
