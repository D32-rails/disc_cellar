body {
  position: relative;
  padding-top: 50px;
  background-color: #fff;
  background-image: image-url('<%= asset_path("library.jpg") %>');
  background-repeat: no-repeat;
  background-position: center;
  color: #5F1C58;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 13px;
  line-height: 18px;
}

p, ol, ul, td {
  padding: 10px;
  font-family: verdana, arial, helvetica, sans-serif;
  font-size: 14px;
  line-height: 16px;
  color: #fff;
}

td {
  color: black;
}

.navbar-header {
  width:100%;
}

.pull-right {
  margin: 10px 10px;
}

.opaque {
  background-color: #fefefe;
  opacity: 0.8;
  color: #fff;
}

#navibrand {
  font-size: 200%;
}

nav {
  color: black;
}

ul {
  color: #fff;
}

.form {
  color: #000;
}

.page-title {
  color: #fefefe;
}

.show-table {
  font-size: 1.2em;
  padding: 8px;
}

.dvd-index {
  color: #fefefe;
}

.white {
  color: #fefefe;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}


a {
  font-size: 1.2em;
  color: #1B1D18;
  &:visited {
    color: #2E2F2D;
  }
  &:hover {
    color: #4A4D45;
    background-color: #000;
  }
}

div {
  &.field, &.actions {
    margin-bottom: 10px;
  }
}

.vcenter {
    vertical-align: middle;
}

#notice {
  color: green;
}

.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  h2 {
    text-align: left;
    font-weight: bold;
    padding: 5px 5px 5px 15px;
    font-size: 12px;
    margin: -7px;
    margin-bottom: 0px;
    background-color: #c00;
    color: #fff;
  }
  ul li {
    font-size: 12px;
    list-style: square;
  }
}
